{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "es2016",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {}
  },
  "include": [
    "./src/**/*"
  ]
}
